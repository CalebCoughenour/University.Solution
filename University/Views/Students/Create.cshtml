@{
  Layout = "_Layout";
}

@model University.Models.Student

<h4>Add a new Student</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.DateEnrolled)
    @Html.TextBoxFor(model => model.DateEnrolled)

    @Html.Label("Select Major")
    @Html.DropDownList("DepartmentId")

    <input type="submit" value="Add new a student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all students", "Index", null, null , new {@class="myCssClass"})</p>