 @{
    Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
    <h3>Please, choose your Course. If there is no course, please, add a course first!</h3>
}

@foreach (Student student in Model)
{
    <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}
</br>
<p>@Html.ActionLink("Add new student", "Create", null, null, new { @class = "myCssClass" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "myCssClass" })</p>