@model University.Models.Department

<div class="container">
<h2>Department Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) </h3>

  @if(@Model.Courses.Count == 0)
  {
    <p>This Department does not contain any courses yet!</p>
  }
  else
  {
    <h4>Courses in this Department:</h4>
    <ul>
      @foreach (var course in Model.Courses)
      {
        <li>@Html.ActionLink($"{course.Name}", "Details", "Courses", new { id = course.CourseId })</li>
      }
    </ul>
  }
  @if (@Model.Students.Count == 0)
  {
    <h4>This Department does not contain any students yet!</h4>
  }

  @foreach (var student in Model.Students)
  {
    <li>@Html.ActionLink($"{student.Name}", "Details", "Students", new { id = student.StudentId })</li>
  }


<p>@Html.ActionLink("Edit Department", "Edit", new { id = Model.DepartmentId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Delete Department", "Delete", new { id = Model.DepartmentId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Back to Departments", "Index", null, null,  new {@class = "myCssClass"})</p>
</div> 