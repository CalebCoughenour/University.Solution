@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Courses:</h1>

@if (@Model.Count == 0)
{
  <h3>No courses on list yet. Add below.</h3>
}

<ul>
  @foreach (Course course in Model)
  {
    <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
  }
</ul>

@if (@ViewBag.DepartmentNum > 0)
{
  <p>@Html.ActionLink("Add new course", "Create", null, null,  new {@class = "myCssClass"})</p>
}

<p>@Html.ActionLink("Home", "Index", "Home", null,  new {@class = "myCssClass"})</p>