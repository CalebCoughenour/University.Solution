@{
  Layout = "_Layout";
}

@model University.Models.Course

<div class="container">
<h4>Add a new Course</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Department")
  @Html.DropDownList("DepartmentId")
  <input class="myCssClass" type="submit" value="Add new course" />
}
<p>@Html.ActionLink("Show all courses", "Index", null, null , new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null , new {@class="myCssClass"})</p>
</div>