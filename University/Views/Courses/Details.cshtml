@{
  Layout = "_Layout";
}

@model University.Models.Course

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This course does not contain any students yet</p>
  }
  else
  {
    <h4>Students in this course:</h4>
    <ul>
      @foreach (var join in Model.JoinEntities)
      {
        <li>@join.Student.Name</li>
      }
    </ul>
  }
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Back to Courses", "Index", null, null,  new {@class = "myCssClass"})</p>